<h1 class="pageTitle">Add user</h1>

<div class="row">
  <div class="signupform">
    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :email %>
      <%= f.text_field :email %>

      <%= f.label :password %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation, "Confirmation" %>
      <%= f.password_field :password_confirmation %>

      
      <div class="admin_container">
      <div class="admin_subcontainer">                     
        <%= f.label :admin %>
        <%= f.radio_button :admin, 1 %>
      </div>
      <div class="admin_subcontainer">                     
        <%= f.label :not_admin %>
        <%= f.radio_button :admin, 0 %>
      </div>
    </div>
      
    <%= f.submit "Add user", class: "buttoncenter" %>
    <% end %>
  </div>
</div>